---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
---

<BaseLayout title="Experience" sideBarActiveItemID="experience">

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Professional Experience</div>
  </div>

  <div class="time-line-container mb-10">
    <TimeLineElement
      title="Astronomy and Astrophysics Intern"
      subtitle="Jun-Jul 2025 · Indian Space Academy (Remote)"
    >
      Hands-on data analysis and Hubble parameter estimation using astronomical datasets.
    </TimeLineElement>
    <TimeLineElement
      title="Summer Intern"
      subtitle="May-Jun 2025 · NIT-Trichy (Onsite)"
    >
      Research and development in RF circuit design and advanced antenna systems.
    </TimeLineElement>
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Education</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="B.Tech in Electronics and Communication Engineering"
      subtitle="2023–Present · VIT Chennai"
    />
  </div>
</BaseLayout>
